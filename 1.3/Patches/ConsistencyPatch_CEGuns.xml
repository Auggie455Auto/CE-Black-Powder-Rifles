<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Combat Extended Guns</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
				<li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="CE_Gun_FlintlockPistol"]/comps/li[@Class="CombatExtended.CompProperties_AmmoUser"]/ammoSet</xpath>
                    <value>
                         <ammoSet>AmmoSet_SlowMusketBallFull</ammoSet>
                    </value>
                </li>	
				
				<li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="CE_Gun_FlintlockMusket"]/comps/li[@Class="CombatExtended.CompProperties_AmmoUser"]/ammoSet</xpath>
                    <value>
                         <ammoSet>AmmoSet_FastMusketBallFull</ammoSet>
                    </value>
                </li>
							
				
            </operations>
        </match>
    </Operation>
</Patch>