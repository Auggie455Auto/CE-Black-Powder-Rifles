<?xml version="1.0" encoding="utf-8" ?>

<Patch>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Combat Extended</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
               <li Class="PatchOperationAdd">
                    <xpath>/Defs/CombatExtended.AmmoSetDef[defName="AmmoSet_FastMusketBall"]/ammoTypes</xpath>
                   <value>
				<!--	 <Ammo_MusketConical>Bullet_MusketConical</Ammo_MusketConical> -->
                         <Ammo_MusketBuck>Bullet_MusketBuck</Ammo_MusketBuck>   
                    </value>
               </li>
			   
			   <li Class="PatchOperationAdd">
                    <xpath>/Defs/CombatExtended.AmmoSetDef[defName="AmmoSet_SlowMusketBall"]/ammoTypes</xpath>
                   <value>
				<!--	 <Ammo_MusketConical>Bullet_SlowMusketConical</Ammo_MusketConical> -->
                         <Ammo_MusketBuck>Bullet_SlowMusketBuck</Ammo_MusketBuck>                
                    </value>
               </li>
			   
			   <li Class="PatchOperationAdd">
                    <xpath>/Defs/CombatExtended.AmmoSetDef[defName="AmmoSet_MortarGrenade"]/ammoTypes</xpath>
                   <value>
                         <Ammo_MortarGrenadeFlare>Bullet_MortarGrenadeFlare</Ammo_MortarGrenadeFlare>                
                    </value>
               </li>
			   
      </operations>
    </match>
	
	
  </Operation>
  
</Patch>