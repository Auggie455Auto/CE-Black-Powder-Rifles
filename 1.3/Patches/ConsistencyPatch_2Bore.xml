<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>CE 2-Bore</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
			
                <li Class="PatchOperationRePlace">
					<xpath>/Defs/ThingDef[defName="CE_Gun_2BoreMusket"]/recipeMaker/researchPrerequisite</xpath>
					<value>
						<researchPrerequisite>Stage1Rifle_BP</researchPrerequisite>
                    </value>
                </li>

				<li Class="PatchOperationRePlace">
					<xpath>/Defs/ThingDef[defName="CE_Gun_LilDuce"]/recipeMaker/researchPrerequisite</xpath>
					<value>
						<researchPrerequisite>Stage1Rifle_BP</researchPrerequisite>
					</value>
				</li>	
				<li Class="PatchOperationAdd">
                    <xpath>/Defs/CombatExtended.AmmoSetDef[defName="AmmoSet_2BoreBP"]/ammoTypes</xpath>
                   <value>
						<Ammo_MortarGrenadeFlare>Bullet_MortarGrenadeFlare</Ammo_MortarGrenadeFlare>   
                    </value>
               </li>
			</operations>					
        </match>
    </Operation>
</Patch>